{
  "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "types": ["vitest/globals"]
  },
  "include": [
    "./src/app/**/*.ts",
    "./src/app/**/*.vue",
    "./src/app/**/*.js",
    "./src/tests/**/*.ts"
  ],
  "files": [
    "./vue-shims.d.ts",
    "./vuex-shims.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
