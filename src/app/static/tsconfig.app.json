{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*.ts", "src/components/**/*"],
  "exclude": ["**/tests/**/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "verbatimModuleSyntax": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "isolatedModules": true,
    
    "jsx": "preserve",
    "jsxImportSource": "vue",

    "noImplicitThis": true,
    "strict": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "declaration": false,
  },
}
